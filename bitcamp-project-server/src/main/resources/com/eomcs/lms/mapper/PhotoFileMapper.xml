<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="PhotoFileMapper">

  <resultMap type="PhotoFile" id="PhotoFileMap">
    <id column="photo_id" property="no"/>
    <result column="titl" property="filepath"/>
    <result column="cdt" property="boardNo"/>
  </resultMap>
  
  <select id="selectPhotoFile" resultMap="PhotoFileMap">
    select photo_file_id, 
      photo_id, 
      file_path
    from lms_photo_file
    where photo_id=#{no}
    order by photo_file_id asc
  </select>
  
  <insert id="insertPhotoFile" parameterType="PhotoFile">
  insert into lms_photo_file(photo_id,file_path) 
  values(?,?)
  </insert>
  
  <delete id="deletePhotoFile" parameterType="int">
    delete from lms_photo_file
           where photo_id=#{no}
  </delete>
  
</mapper>







